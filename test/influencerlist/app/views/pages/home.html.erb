

<div class="home-flex">

  <div class="influencer-container">
    <h1>Suggested Influencers:</h1>
    <% @influencers.sample(5).each do |influencer| %>
      <% if @ids.exclude? influencer.id %>
      <div class="suggested-influencer">
        <%= image_tag influencer.influencer_instagram_profile_image, class: "profile-photo" %>
        <div class="line">
          <h3><%= influencer.influencer_full_name %></h3>
          <p><%= influencer.influencer_instagram_username %></p>
        </div>
        <div class="symbol">
          <%= link_to "+", influencer_starred_influencers_path(influencer), method: "post" %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

  <div class="starred-containter" >
    <h1>Starred Influencers:</h1>
     <% @starred_influencers.each do |starred_influencer| %>
      <div class="starred-influencer">
        <div class="inner-flex">
          <%= image_tag starred_influencer.influencer.influencer_instagram_profile_image, class: "profile-photo" %>
          <div class="line">
            <h3><%= starred_influencer.influencer.influencer_full_name %></h3>
            <p><%= starred_influencer.influencer.influencer_instagram_username %></p>
          </div>
        </div>
        <div class="inner-flex">
          <div class="line">
            <h3><%= number_with_delimiter(starred_influencer.influencer.statistics_followers, :delimiter => ',') %> </h3>
            <p>Followers </p>
          </div>
          <div class="line">
            <h3><%= starred_influencer.influencer.statistics_engagement %>%</h3> <p>Engagement </p>
          </div>
          <div class="symbol">
            <%= link_to "âœ•", starred_influencer_path(starred_influencer), method: "delete" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
